<html>

<head>
  <title>Movie</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- load fontawesome -->
</head>

<style>
  #h1 {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    text-align: center;
    font-size: 300%;
  }

  #table1 {
    position: absolute;
    left: 0px;
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 50%;
  }

  #table1 td,
  #table1 th {
    border: 1px solid #ddd;
    padding: 8px;
  }

  #table1 tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  #table1 tr:hover {
    background-color: #ddd;
  }

  #table1 th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #4CAF50;
    color: white;
  }
</style>

<body>

  <h1 id="h1">Movies
    <a href="/sociallogin" class="btn btn-danger">
      <object align="right" style="font-size:20px">Login</object>
    </a>
    <a href="/visualization" class="btn btn-danger">
      <object align="right" style="font-size:20px; margin-right:15px">Graph</object>
    </a>
  </h1>

  <form method="post" action="/">
    <label>Search Movie: </label>
    <label>"MATCH (n:Movie) WHERE n.title =~
      <input style="text-align: center" type="text" id="txtMovie" name="searchMovie"> return n "</label>
    <br>
    <input type="submit" id="submitbtn" value="Submit">
  </form>

  <table id="table1" style="border-style:double;">
    <tr>
      <th>Movie</td>
        <th>Poster</th>
        <th>Tagline</td>
          <th>Released</th>
          <th >Watch</th>
    </tr>

    <% movies.forEach(function(movie){ %>
      <tr>
        <td onclick="myFunction('<%= movie.title %>')" , "createRel('<%= movie.title %>')">
          <%= movie.title %>
        </td>
        <td>
          <img src="http://neo4j-contrib.github.io/developer-resources/language-guides/assets/posters/<%= movie.title %>.jpg">
        </td>
        <td>
          <%= movie.tagline %>
        </td>
        <td>
          <%= movie.released %>
        </td>
        <td rowspan=".3">
          <form><button><i class="fa fa-thumbs-up" style="font-size:20px;color:green"></i></button></form>
          <form method="post" action="/movies/clickWatch">
            <button onclick="" value="<%= movie.title %>" name="inputClickWatch"> Watch </button>
          </form>
          <form><button><i class="fa fa-thumbs-down" style="font-size:20px;color:red"></i></button></form>
        </td>
      </tr>
      <% }) %>
  </table>

  <script>
    function myFunction(x) {
      document.getElementById("txtMovie").value = x;
      document.getElementById("submitbtn").click();
    }

  </script>


</body>

</html>